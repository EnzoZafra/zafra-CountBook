<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/list_item_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/list_item_count"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/dec_btn"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_count"
        android:src="@drawable/ic_custom_decrement"
        android:contentDescription="@string/buttondesc_dec" />

    <ImageButton
        android:id="@+id/inc_btn"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/dec_btn"
        android:src="@drawable/ic_custom_increment"
        android:contentDescription="@string/buttondesc_inc" />

    <ImageButton
        android:id="@+id/delete_btn"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/inc_btn"
        android:src="@drawable/ic_custom_delete"
        android:contentDescription="@string/buttondesc_delete" />


</RelativeLayout>
